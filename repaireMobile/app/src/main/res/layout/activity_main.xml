<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="保定固弘安防"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_search_record"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="25dp"
                    android:id="@+id/iv_search"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="@string/searchRecord"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/iv_search"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add_record"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="25dp"
                    android:id="@+id/iv_record"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_record"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="@string/addRecord"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/iv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_manage_center"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="25dp"
                    android:id="@+id/iv_manage_center"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_center"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="@string/centerManage"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/iv_manage_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>